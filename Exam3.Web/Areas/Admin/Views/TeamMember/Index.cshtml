@using Exam3.Business.Models.SocialMedia;
@using Exam3.Business.Models;
@using Exam3.Business;
@using Exam3.Business.Models.TeamMember;
@model GenericPaginatedModel<TeamMemberVM>


<a asp-action="Create" class="btn btn-success">Create</a>

<table class="table table-striped">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Profile Image</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Data != null)
            @foreach (var item in Model.Data)
            {
                <tr class="@(item.IsDeleted?"table-danger":"")">
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <img height="100" width="100" src="~/@(item.ImageUrl)" />
                    </td>
                    <td>
                        @if (item.IsDeleted)
                        {
                            <a asp-action="RevokeDelete" asp-route-id="@item.Id" class="btn btn-warning">RevokeDelete</a>
                        }
                        else
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        }
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                </tr>
            }
    </tbody>
</table>